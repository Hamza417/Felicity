<app.simple.felicity.decorations.corners.DynamicCornerMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_margin="@dimen/padding_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <app.simple.felicity.decorations.views.SquareView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <app.simple.felicity.decorations.views.FelicityImageSlider
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <app.simple.felicity.decorations.typeface.TypeFaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginHorizontal="@dimen/padding_15"
        android:layout_marginBottom="@dimen/padding_25"
        android:textSize="@dimen/art_flow_title_text_size"
        app:appFontStyle="bold"
        app:textColorStyle="white" />

</app.simple.felicity.decorations.corners.DynamicCornerMaterialCardView>