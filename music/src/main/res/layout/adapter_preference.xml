<?xml version="1.0" encoding="utf-8"?>
<app.simple.felicity.decorations.ripple.DynamicRippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10"
    android:orientation="horizontal">

    <app.simple.felicity.decorations.theme.ThemeIcon
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size_30"
        android:layout_height="@dimen/icon_size_30"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:tintType="accent" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_20"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <app.simple.felicity.decorations.typeface.TypeFaceTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferences"
            android:textSize="@dimen/text_size_16"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

        <app.simple.felicity.decorations.typeface.TypeFaceTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_not_available"
            android:textSize="@dimen/text_size_12"
            app:appFontStyle="regular"
            app:textColorStyle="tertiary" />

    </LinearLayout>

</app.simple.felicity.decorations.ripple.DynamicRippleLinearLayout>