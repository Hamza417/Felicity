<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <app.simple.felicity.decorations.typeface.TypeFaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:paddingVertical="@dimen/padding_10"
        android:paddingHorizontal="@dimen/padding_20"
        app:appFontStyle="bold"
        app:textColorStyle="primary" />

    <app.simple.felicity.decorations.overscroll.CustomHorizontalRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/padding_15"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/padding_10"
        android:layout_height="wrap_content"
        app:navigationPaddingRequired="false"
        app:statusPaddingRequired="false" />

    <app.simple.felicity.decorations.theme.ThemeDivider
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>