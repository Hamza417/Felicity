<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/padding_15"
    android:layout_height="wrap_content">

    <app.simple.felicity.decorations.corners.DynamicCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/padding_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <app.simple.felicity.decorations.typeface.TypeFaceTextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:padding="@dimen/padding_15"
                android:layout_height="wrap_content"
                android:text="@string/change_songs_interface"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_14"
                app:appFontStyle="bold"
                app:textColorStyle="primary" />

            <app.simple.felicity.decorations.ripple.DynamicRippleTextView
                android:id="@+id/change_songs_interface"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_15"
                android:drawablePadding="@dimen/padding_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_12"
                app:appFontStyle="regular"
                app:drawableEndCompat="@drawable/ic_more_16dp"
                app:drawableTintStyle="accent"
                app:textColorStyle="secondary" />

        </LinearLayout>

        <app.simple.felicity.decorations.theme.ThemeDivider
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/padding_10"
            android:layout_height="1px" />

        <app.simple.felicity.decorations.ripple.DynamicRippleTextView
            android:id="@+id/open_app_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_15"
            android:text="@string/open_app_settings"
            android:textSize="@dimen/text_size_14"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

    </app.simple.felicity.decorations.corners.DynamicCornerLinearLayout>

    <app.simple.felicity.decorations.corners.DynamicCornerFrameLayout
        android:id="@+id/dimmer"
        android:alpha="0"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>