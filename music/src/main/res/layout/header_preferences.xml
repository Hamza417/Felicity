<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_20"
        android:orientation="horizontal">

        <app.simple.felicity.decorations.theme.ThemeIcon
            android:id="@+id/icon"
            android:src="@drawable/ic_settings"
            android:layout_width="@dimen/icon_size_40"
            android:layout_height="@dimen/icon_size_40"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/padding_10"
            app:tintType="accent" />

        <app.simple.felicity.decorations.typeface.TypeFaceTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_36"
            android:text="@string/preferences"
            android:paddingVertical="@dimen/padding_10"
            app:appFontStyle="black"
            app:textColorStyle="primary" />

        <app.simple.felicity.decorations.ripple.DynamicRippleImageButton
            android:id="@+id/search"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/button_size"
            android:src="@drawable/ic_search"
            android:layout_height="@dimen/button_size" />

    </LinearLayout>

    <app.simple.felicity.decorations.theme.ThemeDivider
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>