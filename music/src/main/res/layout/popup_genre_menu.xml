<?xml version="1.0" encoding="utf-8"?>
<app.simple.felicity.decorations.corners.DynamicCornerMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <app.simple.felicity.decorations.ripple.DynamicRippleTextView
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/text_size_16"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

        <app.simple.felicity.decorations.ripple.DynamicRippleTextView
            android:id="@+id/add_to_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:text="@string/add_to_queue"
            android:padding="@dimen/padding_15"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

        <app.simple.felicity.decorations.ripple.DynamicRippleTextView
            android:id="@+id/add_to_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_to_playlist"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/padding_15"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

    </LinearLayout>

</app.simple.felicity.decorations.corners.DynamicCornerMaterialCardView>