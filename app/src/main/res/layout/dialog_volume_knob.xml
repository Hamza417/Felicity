<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:padding="@dimen/padding_15">

    <app.simple.felicity.decorations.corners.DynamicCornerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15">

        <app.simple.felicity.decorations.knobs.simple.RotaryKnobView
            android:id="@+id/volumeKnob"
            android:layout_width="@dimen/volume_knob_dimension"
            android:layout_height="@dimen/volume_knob_dimension"
            android:layout_gravity="center" />

    </app.simple.felicity.decorations.corners.DynamicCornerFrameLayout>

</FrameLayout>
