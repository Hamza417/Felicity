<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DynamicCornerLayout">
        <!-- At least one of them needs to be true else roundness will be applies to all corners
                default is false for both of them -->
        <attr name="roundTopCorners" format="boolean" />
        <attr name="roundBottomCorners" format="boolean" />
        <attr name="roundAllCorners" format="boolean" />
    </declare-styleable>

    <!-- Type Face Text View -->
    <declare-styleable name="TypeFaceTextView">
        <attr name="appFontStyle" format="string">
            <flag name="light" value="0" />
            <flag name="regular" value="1" />
            <flag name="medium" value="2" />
            <flag name="bold" value="3" />
        </attr>

        <attr name="textColorStyle" format="string">
            <flag name="heading" value="0" />
            <flag name="primary" value="1" />
            <flag name="secondary" value="2" />
            <flag name="tertiary" value="3" />
            <flag name="quaternary" value="4" />
            <flag name="accent" value="5" />
            <flag name="white" value="6" />
        </attr>

        <attr name="drawableTintStyle" format="string">
            <flag name="accent" value="0" />
            <flag name="regular" value="1" />
            <flag name="secondary" value="2" />
            <flag name="warning" value="3" />
        </attr>

        <attr name="isDrawableHidden" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ThemeIcon">
        <attr name="tintType" format="string">
            <flag name="regular" value="0" />
            <flag name="secondary" value="1" />
            <flag name="accent" value="2" />
            <flag name="custom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ThemeButton">
        <attr name="buttonTintType" format="string">
            <flag name="regular" value="0" />
            <flag name="secondary" value="1" />
            <flag name="accent" value="2" />
            <flag name="white" value="3" />
            <flag name="custom" value="-1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LrcView">
        <attr name="lrcTextSize" format="dimension" />
        <attr name="lrcLineSpaceSize" format="dimension" />
        <attr name="lrcNormalTextColor" format="reference|color" />
        <attr name="lrcCurrentTextColor" format="reference|color" />
        <attr name="lrcTouchDelay" format="integer" />
        <attr name="noLrcTextSize" format="dimension" />
        <attr name="noLrcTextColor" format="reference|color" />
        <attr name="indicatorLineHeight" format="dimension" />
        <attr name="indicatorTextSize" format="dimension" />
        <attr name="indicatorTextColor" format="reference|color" />
        <attr name="currentIndicateLrcColor" format="reference|color" />
        <attr name="indicatorTouchDelay" format="integer" />
        <attr name="indicatorLineColor" format="reference|color" />
        <attr name="indicatorStartEndMargin" format="dimension" />
        <attr name="iconLineGap" format="dimension" />
        <attr name="playIconWidth" format="dimension" />
        <attr name="playIconHeight" format="dimension" />
        <attr name="playIcon" format="reference" />
        <attr name="isLrcCurrentTextBold" format="boolean" />
        <attr name="isLrcIndicatorTextBold" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecyclerView">
        <attr name="statusBarPaddingRequired" format="boolean" />
        <attr name="manuallyAnimated" format="boolean" />
        <attr name="isFastScrollRequired" format="boolean" />
        <attr name="isEdgeColorRequired" format="boolean" />
        <attr name="isFadingEdgeRequired" format="boolean" />
        <attr name="isTopFadingEdgeOnly" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FeatureCoverFlow">
        <attr name="coverWidth" format="dimension" />
        <attr name="coverHeight" format="dimension" />
        <attr name="spacing" format="float" />
        <attr name="rotationThreshold" format="float" />
        <attr name="scalingThreshold" format="float" />
        <attr name="adjustPositionThreshold" format="float" />
        <attr name="adjustPositionMultiplier" format="float" />
        <attr name="maxRotationAngle" format="float" />
        <attr name="maxScaleFactor" format="float" />
        <attr name="circlePathRadius" format="float" />
        <attr name="circlePathRadiusInMatrixSpace" format="float" />
        <attr name="reflectionHeight" format="float" />
        <attr name="reflectionGap" format="dimension" />
        <attr name="reflectionOpacity" format="integer" />
        <attr name="tuningWidgetSize" format="dimension" />
        <attr name="alignAnimationTime" format="integer" />
        <attr name="verticalPaddingTop" format="dimension" />
        <attr name="verticalPaddingBottom" format="dimension" />
        <attr name="reflectionBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EndlessLoopAdapterContainer">
        <attr name="shouldRepeat" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BasicContentBand">
        <attr name="gridMode">
            <flag name="fixed" value="0" />
            <flag name="dynamic" value="1" />
        </attr>

        <attr name="deviceSpecificPixelSize" format="integer" />
    </declare-styleable>

</resources>